{
    "name": "main",
    "description": "Newton integration for Dagon",
    "homepage": "https://github.com/gecko0307/dagon-newton",
    "license": "Boost",
    "authors": [
        "Timur Gafarov"
    ],
    
    "dependencies": {
        "dagon": "0.11.0",
        "bindbc-newton": "0.1.1"
    },

    "importPaths": [
        "src"
    ],

    "buildRequirements":[
        "allowWarnings"
    ],

    "sourcePaths": ["src"],

    "configurations": [
        {
            "name": "library",
            "targetType": "library"
        },
        {
            "name": "import",
            "targetType": "sourceLibrary",
            "sourceFiles-posix": ["libdagonnewton.a"],
            "sourceFiles-windows": ["dagonnewton.lib"]
        },
        {
            "name": "application",
            "targetType": "executable",
            "mainSourceFile": "demo/main.d",
            "dependencies": {
                "dagon:ftfont": "0.11.0"
            },
        }
    ]
}

